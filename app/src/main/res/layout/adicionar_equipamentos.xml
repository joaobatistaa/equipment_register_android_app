<?xml version="1.0" encoding="utf-8" ?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:background="@color/colorBranco">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/titulo_imagem"
            android:layout_width="200px"
            android:layout_height="100px"
            android:src="@drawable/title_img"/>

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Novo Equipamento"
            android:textSize="55px"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/text1"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Agrupamento:"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:id="@+id/agrupamentos"
            android:background="@drawable/spinner_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40px">

        <TextView
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:text="Escola:"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:id="@+id/escolas"
            android:background="@drawable/spinner_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40px">

        <TextView
            android:id="@+id/text3"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Edifício Mun.:"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:id="@+id/edificios"
            android:background="@drawable/spinner_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/text4"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tipo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/text5"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Marca:"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/marca"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/text6"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Modelo:"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modelo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/text7"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="N.º Série:"
            android:textColor="#000000" />

        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/nserie"/>

        <ImageView
            android:id="@+id/btn_barcode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/barcode_scanner" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/text8"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Nº Patrimón.:"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/npatrimonio"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/text9"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Sala:"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sala"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40px">

        <TextView
            android:id="@+id/text10"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="55px"
            android:id="@+id/estados"
            android:background="@drawable/spinner_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40px">

        <Button
            android:id="@+id/btn_adicionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar"
            android:layout_weight="12"
            android:background="@color/colorBotoesFundo"
            android:textColor="@color/colorBranco"
            android:layout_marginTop="40px"
            android:layout_marginRight="70px"
            android:layout_marginLeft="70px"
            android:layout_marginBottom="50px"/>

    </LinearLayout>
    </LinearLayout>
</ScrollView>

