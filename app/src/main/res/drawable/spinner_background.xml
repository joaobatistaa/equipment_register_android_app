<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/colorBranco">
                </solid>

                <corners android:radius="3dp" />

                <padding
                    android:bottom="5dp"
                    android:left="1dp"
                    android:right="7dp"
                    android:top="1dp" />
                <stroke
                    android:width="2dp"
                    android:color="@color/colorCinzento"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="bottom|right"
                android:src="@drawable/seta_baixo" />
        </item>
    </layer-list></item>
</selector>